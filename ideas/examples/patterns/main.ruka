const std = @.import("std")

const Color = record {
    r: u8,
    g: u8,
    b: u8
}

const (+)(.{rl, gl, bl}: &Color) -> Color = (.{rr, gr, br}: &Color) {
    Color.{
        r: rl + rr,
        g: gl + gr,
        b: bl + br
    }
}

const main -> Result(unit) = () {
    let red = Color.{r: 255, g: 0, b: 0}
    let blue = Color.{r: 0, g: 0, b: 255}
    let purple = red + blue
    let .{r, g, b} = purple
    @.assert(r == 255 and g == 0 and b == 255)?

    Ok <| ()
}
