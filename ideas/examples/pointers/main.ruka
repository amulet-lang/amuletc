const std = @.import("std")

const add = (mut x: *int, y: int) {
    x* = x* + y
}

const new -> Option(*int) = (val: int) {
    let mut allocator = std.heap.allocator{}
    allocator.new(int, val)
}

const main -> Result(unit) = () {
    let mut x = new(10)?
    let y = 5
    add(mut x, y)
    @.assert(x* == 15)?
}
